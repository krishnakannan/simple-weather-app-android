<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.HomeFragment"
    android:background="@color/colorPrimary">

    <ImageView
        android:id="@+id/forecastImg"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginRight="30dp"
        android:src="@drawable/rain"
        android:layout_marginEnd="30dp"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/forecastTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Forecast"
        android:textSize="25sp"
        android:layout_below="@+id/forecastImg"
        android:textAlignment="center"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/forecastDetailsTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Forecast"
        android:textSize="15sp"
        android:layout_below="@+id/forecastTextView"
        android:textAlignment="center"
        android:textColor="@color/white"/>

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/forecastDetailsTextView" />

</RelativeLayout>
